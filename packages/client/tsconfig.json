{
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    ".cache"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true
  }
}